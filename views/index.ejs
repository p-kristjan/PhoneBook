<%- include('includes/head.ejs'); %>

<header class="main-header">
    <h1>#contact_list</h1>
</header>

<main>
    <% for(let i = 0; i < contactItems.length; i++) { %>
        <form class="form" action="/delete-contact" method="POST">
            <div class="item formcontrol flex">
                <!--<input name="checkbox" value="<%= contactItems[i].id %>" type="checkbox" onchange="this.form.submit()">-->
                <input class="txtinput disabled" disabled="disabled" type="text" name="firstName" value="<%= contactItemsArray[i] %>">
                <input type="hidden" value="<%= contactItems[i].id %>" name="contactId">
                <button type="submit" class="deleteButton">
                    <i class="fas fa-trash delete-icon fa-2x" ></i>
                </button>
            </div>
        </form>
    <% } %>
    <form action="/add-user">
        <button class="btn">add</button>
    </form>
</main>


    
