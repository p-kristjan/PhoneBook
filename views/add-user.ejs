<%- include('includes/head.ejs'); %>

<header class="main-header">
    <h1>#add_contact</h1>
</header>

<main>
    <form class="form" action="/add-user" method="POST">
        <div class="formcontrol">
            <label for="firstName">first name</label>
            <input class="txtinput" type="text" name="firstName" placeholder="John">
            <label for="lastName">last name</label>
            <input class="txtinput" type="text" name="lastName" placeholder="Doe">
            <label for="phoneNumber">phone number</label>
            <input class="txtinput" type="text" name="phoneNumber" placeholder="+372 5555 4444">
        </div>
        <button class="btn" type="submit">submit</button>
    </form>
</main>

